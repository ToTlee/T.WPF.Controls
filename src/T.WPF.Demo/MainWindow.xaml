<Window x:Class="T.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tc="clr-namespace:T.Controls;assembly=T.WPF.Controls"
        xmlns:local="clr-namespace:T.WPF.Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock FontSize="30" Margin="8">Color Picker</TextBlock>
            <tc:ColorPicker x:Name="colorpicker" Width="300" Height="200" Background="#bbbbbb"
                            Padding="10"/>
            <TextBlock FontSize="30"
                       Margin="10">SelectedColor</TextBlock>
            <Rectangle Width="80" Height="80"
                       Margin="20" HorizontalAlignment="Left">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{Binding Color, ElementName=colorpicker, UpdateSourceTrigger=PropertyChanged}"/>
                </Rectangle.Fill>
            </Rectangle>
        </StackPanel>
        
    </Grid>
</Window>
