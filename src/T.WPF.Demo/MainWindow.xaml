<Window x:Class="T.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tc="clr-namespace:T.Controls;assembly=T.WPF.Controls"
        xmlns:local="clr-namespace:T.WPF.Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <tc:ColorsSelector x:Name="colorCanvas" Width="200" Margin="0" BorderBrush="Red" BorderThickness="0"
                         HorizontalAlignment="Left" Padding="40"/>
            <Rectangle  Width="80" Height="80"
                       Margin="20">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{Binding SelectedColor, ElementName=singleColorpanel, UpdateSourceTrigger=PropertyChanged}"/>
                </Rectangle.Fill>
            </Rectangle>
            <tc:SingleColorPanel x:Name="singleColorpanel" 
                                 SourceColor="{Binding SelectedColor, ElementName=colorCanvas, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200" Height="200"/>
        </StackPanel>
        
    </Grid>
</Window>
